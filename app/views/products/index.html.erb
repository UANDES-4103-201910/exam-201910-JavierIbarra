<p id="notice"><%= notice %></p>
<div class="col-12 text-center">
  <h1>Products</h1>
</div>


<div class="col-12 text-center">
  <table class="table table-bordered">
    <thead>
      <tr class="text-center">
        <th> Brand </th>
        <th> Model </th>
        <th> Variant </th>
        <th> Price </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.brand %></td>
          <td><%= product.model %></td>
          <td><%= product.variant %></td>
          <td><%= product.price %> CLP</td>
          <td class="text-center"><%= link_to 'Details', product, :class => 'btn btn-info'%></td>
          <td class="text-center"><%= link_to 'Add', product, :class => 'btn btn-info'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

